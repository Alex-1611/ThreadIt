@model Category
<h1>Control Panel <span class="text-danger">Admin</span></h1>

<p>Add a new category</p>

<form method="post" asp-controller="Categories" asp-action="New">
	<div class="form-group">
		<label class="m-2" asp-for="Name">Category Name</label>
		<input type="text" asp-for="Name" class="m-2 form-control"/>
		<span asp-validation-for="Name" class="m-2 text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Description">Description</label>
		<textarea asp-for="Description" class="form-control" placeholder="Enter the category's description here...'">
		</textarea>
	</div>

	<button type="submit" class="btn btn-dark">Add</button>
</form>